<html>
    <head>
        <title>
            Dainik Follows 
        </title>
        <style>
              .wrap{
              width: 100%;
              overflow:auto;
              }
              
              .fleft {
                float:left; 
                width: 40%;
               background:lightskyblue;
                height: 900px;
              }
              .fleft .imgset{
                border: 1px solid #5fe929;
                border-radius: 12px;
                margin: 5px;
                padding: 2px;
              }
              .imgset img{
                width:200px;
                height: 200px;
              }
              .fleft .name{
                border: 1px solid blueviolet;
                border-right: none;
                border-left: none;
                font-size: 12px;
                margin: 2px;
                padding: 2px;
              }

              .fright {
             float: right;
              background:lightseagreen;
              height: 900px;
              width: 60%;
          }

          .fright .upper{
            border: 2px solid blueviolet;
            height: 50px;
            margin: 2px;
          }
          .searchfriends{
            padding-top: 5px;
            padding-left: 2px;
            float: left;
            }
          .searchfriends input[type="text"]{
              width: 230px;
              height: 40px;
          }   
          .searchfriends input[type="submit"]{
              height: 40px;
              border: 1px solid olivedrab;
              border-radius: 12px;
          }               
                  #setting{
                height:30px;
                margin-top:-17px;
                }
                #setting ul li{
                  padding-left:10px;
                  padding-right:10px;
                  float:left;
                  height:23px;
                  display:block;
                  margin-top:4px;
                  margin-left:10px;
                  text-align:center;
                  }
                  #setting button{
                    background-color: #3498DB;
                  color: white;
                  padding: 16px;
                  font-size: 16px;
                  border: none;
                  cursor: pointer;
                  }
                 .followinfo{
                   height: 90px;
                   background-color:aqua;
                    }
                    .followinfo .total{
                      text-align: center;
                      width: 100px;
                      margin: 2px;
                      padding: 2px;
                      float: left;
                      border: 2px solid black;
                    }
              .dropbtn {
                  background-color: #3498DB;
                  color: white;
                  padding: 16px;
                  font-size: 16px;
                  border: none;
                  cursor: pointer;
                }
                
                .dropbtn:hover, .dropbtn:focus {
                  background-color: #2980B9;
                }
                
                .dropdown {
                  position: relative;
                  display: inline-block;
                  margin-right: 150px;

                }
                
                .dropdown-content {
                  display: none;
                  position: absolute;
                  background-color: #f1f1f1;
                  min-width: 160px;
                  overflow: auto;
                  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                  z-index: 1;

                }
                
                .dropdown-content a {
                  color: black;
                  padding: 12px 16px;
                  text-decoration: none;
                  display: block;
                }
                
                .dropdown a:hover {background-color: #ddd;}
                
                .show {display: block;}
                input[type="file"]{
                  display: none;
                }
    .notification {
  background-color: #555;
  color: white;
  text-decoration: none;
  position: relative;
  display: inline-block;
  border-radius: 2px;
}

.notification:hover {
  background: red;
}

.notification .badge {
  position: absolute;
  top: -2px;
  right: -5px;
  padding: 3px 5px;
  border-radius: 50%;
  background-color: red;
  color: white;
}

                  </style>
    </head>
        <body>
          <div class="wrap">
            <div class="fleft">
              <div class="imgset">
                  <img src="<%=userprofile%>">
                  <form action="/uploadprofile" method="POST" enctype="multipart/form-data">
                  <label>Take Picture<input type="file" name="profilepic" required></label>
                  <input type="submit" name="submit" value="Change Profile Picture"><%=error%>
                  </form>
              </div>
                <div class="name">
                  <%=user.Name%>
                </div>
                <div class="followinfo">
                  <div class="total" onclick="location.href='/getfollowing'"><h3>Follow</h3><%=totalfollow%></div>
                  <div class="total"  onclick="location.href='/getfollow'"><h3>Following</h3><%=totalfollowing%></div>
                </div>
            </div>
            <div class="fright">
              <div class="upper">
                <div class="searchfriends">
                  <form action="/friendsearch" method="POST">
                  <input type="text" name="friendsearch" placeholder="Search Friend">
                  <input type="submit" name="submit" value="Search">
                  </form>
                </div>
            <div id="setting">
              <ul>
                <li><button onclick="location.href='/follows'" class="notification"><span><img src="/upload/friendsrequsted.png" style="height: 10px; width: 10px"></span>  
                  <span class="badge"><%=totalreq%></span></button></li>
                        <div class="dropdown">                            
                            <li><button onclick="myFunction()" class="dropbtn"><img src="/upload/settings_black_20dp.png" style="height: 10px; width: 10px"></button></li>
                            <div id="myDropdown" class="dropdown-content">
                              <a href="/editprofile">Edit Profile</a>
                              <a href="/setting">setting</a>
                            </div>
                          </div>
                        </ul>
                        </div>
            </div>
            </div> 
                      </div>
                  <script>
                  /* When the user clicks on the button, 
                  toggle between hiding and showing the dropdown content */
                  function myFunction() {
                    document.getElementById("myDropdown").classList.toggle("show");
                  }
                  
                  // Close the dropdown if the user clicks outside of it
                  window.onclick = function(event) {
                    if (!event.target.matches('.dropbtn')) {
                      var dropdowns = document.getElementsByClassName("dropdown-content");
                      var i;
                      for (i = 0; i < dropdowns.length; i++) {
                        var openDropdown = dropdowns[i];
                        if (openDropdown.classList.contains('show')) {
                          openDropdown.classList.remove('show');
                        }
                      }
                    }
                  }
                  </script>
        </body>
</html>